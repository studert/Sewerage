@using Build.Mvc
@using Build.Mvc.Html
@using Sewerage.HtmlHelpers

@model Sewerage.Models.Section

<h2>Section Editor</h2>

@using (Html.BuildForm().AddClass("form-horizontal").Bind("with", "EditingSection").Bind("submit", "saveSections").Begin())
{
    @Html.BuildValidationSummary(true, "Validation Summary").AddClass("alert").AddClass("alert-error")

    <fieldset>
        <legend>Section Id <span data-bind="text: SectionId"></span></legend>
        @Html.BuildControlGroupFor(x => Model.Number)
        @Html.BuildControlGroupFor(x => Model.Length)
        @Html.BuildControlGroupFor(x => Model.City)
        @Html.BuildControlGroupFor(x => Model.Street)

        @Html.BuildFormActions("$parent.deleteSection")
    </fieldset>
}