﻿<h2>Edit Observation</h2>

<form class="form-horizontal" data-bind="with: EditingObservation, submit: saveObservations">
        <fieldset>
        <legend>Observation Id <span data-bind="text: ObservationId"></span></legend>
        <div class="control-group">
            <label class="control-label" for="Position">Position</label>
            <div class="controls">
                <input type="text" class="input-xlarge" id="Position" data-bind="value: Position"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="Tag">Tag</label>
            <div class="controls">
                <input type="text" class="input-xlarge" id="Tag" data-bind="value: Tag"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="Description">Description</label>
            <div class="controls">
                <input type="text" class="input-xlarge" id="Description" data-bind="value: Description"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="SecondsIntoVideo">Video Offset</label>
            <div class="controls">
                <input type="text" class="input-xlarge" id="SecondsIntoVideo" data-bind="value: SecondsIntoVideo"/>
            </div>
        </div>
    </fieldset>
    <div class="well">
        <button class="btn btn-primary" type="submit" data-bind="enable: IsUpdated() || IsAdded()">Save</button>
        <a class="btn btn-danger" href="#" data-bind="visible: CanDelete, click: $parent.deleteObservation">Delete</a>
        <a class="btn" href="#" data-bind="click: $parent.showDefaultView">Back to observations</a>
        <a class="btn" href="#" data-bind="visible: IsUpdated, click: $parent.revertObservations">Undo changes</a>
    </div>
</form>