@using Build.Mvc
@using Build.Mvc.Html
@using Sewerage.HtmlHelpers
@model Sewerage.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}

<hgroup>
    <h1>@ViewBag.Title.</h1>
    <h2>Use the form below to create a new account.</h2>
</hgroup>

<div class="alert alert-info">
    Passwords are required to be a minimum of @Membership.MinRequiredPasswordLength characters in length.
</div>


@using (Html.BuildForm().AddClass("form-horizontal").Begin())
{
    @Html.BuildValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.").AddClass("alert").AddClass("alert-error")

    <fieldset>
        <legend>Registration Form</legend>
        @Html.BuildControlGroupFor(x => Model.UserName)
        @Html.BuildControlGroupFor(x => Model.Email)
        @Html.BuildControlGroupFor(x => Model.Password)
        @Html.BuildControlGroupFor(x => Model.ConfirmPassword)
        
        <div class="form-actions">
            @Html.BuildSubmitButtonWithIcon("Register", "icon-ok icon-white").AddClass("btn").AddClass("btn-primary")
        </div>
    </fieldset>
}
