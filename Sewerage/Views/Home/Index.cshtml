@using Sewerage.Controllers
@{
    ViewBag.Title = "Sewerage";
}

@section navigation
{
    <div class="scroll-y">
        <h3>Projects</h3>
        @Html.Partial("_ProjectsList")
    </div>
}

@section ribbon
{
    <nav>
        <div data-bind="if: Ribbon() == 'project'">@Html.Partial("_ProjectsMenu")</div>
        <div data-bind="if: Ribbon() == 'section'">@Html.Partial("_SectionsMenu")</div>
        <div data-bind="if: Ribbon() == 'inspection'">@Html.Partial("_InspectionsMenu")</div>
        <div data-bind="if: Ribbon() == 'observation'">@Html.Partial("_ObservationsMenu")</div>
    </nav>
}

<div class="top row">
    <div class="top row left col scroll-y">
        <div>
            <h3>Sections</h3>
            @Html.Partial("_SectionsList")
            
            <h3>Inspections</h3>
            @Html.Partial("_InspectionsList")
        </div>

@*        <div data-bind="with: EditingSection">
            @Html.Partial("_SectionDetails")
        </div>*@
    </div>
    <div class="top row right col">
        @Html.Partial("_Player")
    </div>
</div>

<div class="bottom row scroll-x scroll-y">
    <div>
        <h3>Observations</h3>
        @Html.Partial("_ObservationsList")
    </div>
</div>

<script src="~/Scripts/App/SewerageViewModel.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        upshot.metadata(@(Html.Metadata<SewerageController>()));

        var viewModel = new Sewerage.SewerageViewModel({
            serviceUrl: "/api/Sewerage/"
        });

        ko.applyBindings(viewModel);
    });
</script>