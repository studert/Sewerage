<div data-bind="if: $root.ChosenProjectId() != null">
    <table class="sectionTable">
        <tr>
            <thead>
                <th>Number</th>
                <th>Length</th>
                <th>City</th>
                <th>Street</th>    
                <th></th>     
            </thead>
            <tbody data-bind="foreach: Sections">
                <tr data-bind="css: { selected: SectionId == $parent.ChosenSectionId(), updated: IsUpdated, added: IsAdded }, click: $parent.selectSection">
                    <td data-bind="text: Number"></td>
                    <td><input data-bind="value: Length" /></td>
                    <td><input data-bind="value: City" /></td>
                    <td><input data-bind="value: Street" /></td>
                    <td><a href="#" data-bind="click: $parent.editSection">details</a></td>
                </tr>
            </tbody>
        </tr>
    </table>
</div>