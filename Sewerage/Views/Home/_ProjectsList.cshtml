@using Sewerage.Resources.Views.Home

<h2>@IndexStrings.Projects</h2>

<div class="well">
    <ul class="nav nav-pills nav-stacked" data-bind="foreach: Projects">
        <li class="active" data-bind="css: { active: ProjectId == $parent.ChosenProjectId() }, click: $parent.selectProject">
            <a href="#">
                <strong data-bind="text: Name"></strong><br/>
                <em data-bind="text: Description"></em>
            </a>
        </li>
    </ul>
</div><!--/.well -->