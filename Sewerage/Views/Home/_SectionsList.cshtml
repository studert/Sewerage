@using Build.Mvc
@using Sewerage.HtmlHelpers
@using Sewerage.Resources.Views
@using Sewerage.Resources.Views.Home
@model Sewerage.Models.Section

<h2>@IndexStrings.Sections</h2>

<div data-bind="if: $root.ChosenProjectId() != null">
    <table class="table">
        <tr>
            <thead>
                @Html.BuildTh().AddClass("view-row")
                @Html.BuildThFor(x => Model.Number)
                @Html.BuildThFor(x => Model.Length)
                @Html.BuildThFor(x => Model.City)
                @Html.BuildThFor(x => Model.Street)
                @Html.BuildTh()
            </thead>
            <tbody data-bind="foreach: Sections">
                <tr data-bind="click: $parent.selectSection">
                    <td><i class="icon-eye-open" data-bind="visible: SectionId == $parent.ChosenSectionId()"></i></td>
                    @Html.BuildTd().Bind("text", "Number")
                    @Html.BuildTd().Bind("text", "Length")
                    @Html.BuildTd().Bind("text", "City")
                    @Html.BuildTd().Bind("text", "Street")
                    <td>
                        <span class="pull-right">
                            <a class="btn btn-mini" href="#" data-bind="click: $parent.editSection"><i class="icon-edit"></i> @GlobalStrings.EditButton</a>
                            <a class="btn btn-mini btn-danger" href="#" data-bind="click: $parent.deleteSection"><i class="icon-trash icon-white"></i> @GlobalStrings.DeleteButton</a>
                        </span>
                    </td>
                </tr>
            </tbody>
        </tr>
    </table>
</div>