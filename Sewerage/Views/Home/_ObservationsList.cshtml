<div data-bind="if: $root.ChosenInspectionId() != null">
    <table class="observationTable">
        <tr>
            <thead>
                <th>Position</th>
                <th>Tag</th>
                <th>Description</th>
                <th>Video</th>         
            </thead>
            <tbody data-bind="foreach: Observations">
                <tr data-bind="css: { selected: ObservationId == $parent.ChosenObservationId(), updated: IsUpdated }, click: $parent.selectObservation">
                    <td data-bind="text: Position"></td>
                    <td><input data-bind="value: Tag"/></td>
                    <td><input data-bind="value: Description"/></td>
                    <td><input data-bind="value: SecondsIntoVideo"/></td>
                </tr>
            </tbody>
        </tr>
    </table>
</div>