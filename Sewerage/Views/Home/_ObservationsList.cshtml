<div data-bind="if: $root.ChosenInspectionId() != null">
    <h2>Observations</h2>
    <table class="table">
        <tr>
            <thead>
                <th class="view-row"></th>
                <th>Position</th>
                <th>Tag</th>
                <th>Description</th>
                <th>Video Offset</th>     
                <th class="edit-row"></th>     
                <th class="delete-row"></th> 
            </thead>
            <tbody data-bind="foreach: Observations">
                <tr data-bind="click: $parent.selectObservation">
                    <td><i class="icon-eye-open" data-bind="visible: ObservationId == $parent.ChosenObservationId()"></i></td>
                    <td data-bind="text: Position"></td>
                    <td data-bind="text: Tag"></td>
                    <td data-bind="text: Description"></td>
                    <td data-bind="text: SecondsIntoVideo"></td>
                    <td><a class="btn btn-mini" href="#" data-bind="click: $parent.editObservation"><i class="icon-edit"></i> Edit</a></td>
                    <td><a class="btn btn-mini btn-danger" href="#" data-bind="click: $parent.deleteObservation"><i class="icon-trash icon-white"></i> Delete</a></td>
                </tr>
            </tbody>
        </tr>
    </table>
</div>