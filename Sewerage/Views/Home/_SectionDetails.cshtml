@model Sewerage.Models.Section

﻿<h2>Edit Section</h2>

<form class="form-horizontal" data-bind="with: EditingSection, validate: $root.sectionValidationConfig">
    <fieldset>
        <legend>Section Id <span data-bind="text: SectionId"></span></legend>
        <div class="control-group">
            <label class="control-label" for="Number">Number</label>
            <div class="controls">
                <input type="text" class="input-medium" name="Number" id="Number" data-bind="value: Number, autovalidate: true"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="Length">Length</label>
            <div class="controls">
                <input type="text" class="input-medium" name="Length" id="Length" data-bind="value: Length, autovalidate: true"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="City">City</label>
            <div class="controls">
                <input type="text" class="input-medium" name="City" id="City" data-bind="value: City, autovalidate: true"/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="Street">Street</label>
            <div class="controls">
                <input type="text" class="input-medium" name="Street" id="Street" data-bind="value: Street, autovalidate: true"/>
            </div>
        </div>
    </fieldset>
    <div class="form-actions">
        <button class="btn btn-primary" type="submit" data-bind="enable: IsUpdated() || IsAdded()"><i class="icon-ok icon-white"></i> Save changes</button>
        <a class="btn btn-danger" href="#" data-bind="visible: CanDelete, click: $parent.deleteSection"><i class="icon-trash icon-white"></i> Delete</a>
        <a class="btn" href="#" data-bind="click: $parent.showDefaultView"><i class="icon-arrow-left"></i> Back to sections</a>
        <a class="btn" href="#" data-bind="visible: IsUpdated, click: $parent.revertSections"><i class="icon-remove"></i> Undo changes</a>
    </div>
</form>